@using MVC_ilk_procem.Models.Entity;
@model List<TBLMUSTERILER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/MasterLeyaut.cshtml";
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>AD</th>
            <th>SOYAD</th>
            <th>SİL</th>
            <th>GÜNCELLE</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var i in Model)
        {
            <tr>
                <th>@i.MUSTERI_ID</th>
                <td>@i.MUSTERI_AD</td>
                <td>@i.MUSTERI_SOYAD</td>
                <td><a href="/Musteri/Sil/@i.MUSTERI_ID" class="btn btn-danger">SİL</a></td>
                <td><a href="/Musteri/MusteriGetir/@i.MUSTERI_ID" class="btn btn-success">GÜNCELLE</a></td>
            </tr>
        }
    </tbody>
</table>

<td><a href="/Musteri/Yenimusteri/" class="btn btn-primary">YENİ MÜŞTERİ EKLE</a></td>


