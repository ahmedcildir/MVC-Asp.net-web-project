@using MVC_ilk_procem.Models.Entity;
@using PagedList;
@using PagedList.Mvc;
@model PagedList.IPagedList<TBLKATEGORILER>
@{
                /**/

                ViewBag.Title = "Index";
                Layout = "~/Views/Shared/MasterLeyaut.cshtml";
}


<table class="table table-bordered">
    <thead>
        <tr>
            <th>KATEGORİ ID</th>
            <th>KATEGORİ ADI</th>
            <th>SİL</th>
            <th>GÜNCELLE</th>


        </tr>
    </thead>
    <tbody>
        @foreach (var i in Model)
        {
            <tr>
                <th>@i.KATEGORI_ID</th>
                <td>@i.KATEGORI_AD</td>
                <td><a href="/Katogori/Sil/@i.KATEGORI_ID" class="btn btn-danger">SİL</a></td>
                <td><a href="/Katogori/Guncelle/@i.KATEGORI_ID" class="btn btn-success">GÜNCELLE</a></td>
            </tr>
        }
    </tbody>
</table>
@Html.PagedListPager((IPagedList)Model,sayfa=>Url.Action("Index",new { sayfa}))
<td><a href="/Katogori/Yenikategori/" class="btn btn-primary">YENİ KATEGORİ EKLE</a></td>